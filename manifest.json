{
  "manifest_version": 2,
  "name": "NotaBene",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.1.0.min.js", "content.js"],
      "css": ["note_style.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "run_at": "document_idle"
  },
  "browser_action": {
    "default_icon": {
      "19": "nb_icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "nb_icon.png",
    "48": "nb_icon.png",
    "128": "nb_icon.png"
  }
}
